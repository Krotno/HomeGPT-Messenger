<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeGPT_Messenger.Pages.SettingsPage"
             Title="SettingsPage">
    <Grid>
        <VerticalStackLayout>
            <Grid HeightRequest="48">
                <Button Text="☰" Clicked="OnMenuButtonCliCked" WidthRequest="40"
                HeightRequest="40" CornerRadius="20" BackgroundColor="#eeeeee"
                FontSize="20" HorizontalOptions="Start" VerticalOptions="Center"
                Margin="8,8,0,0"/>
                <Label Text="Настройки" FontAttributes="Bold" FontSize="24"
               VerticalOptions="Center" HorizontalOptions="Center"/>
            </Grid>
        </VerticalStackLayout>
        <Grid x:Name="SideMenu" IsVisible="False" BackgroundColor="#DDFFFFFF"
                WidthRequest="200" VerticalOptions="Fill" HorizontalOptions="Start">
            <VerticalStackLayout Padding="16,32">
                <Button Text="Чаты" Clicked="OnChatsClicked"/>
                <Button Text="Настройки" Clicked="OnSettingsClicked"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>    
</ContentPage>